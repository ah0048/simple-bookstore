@model bookstore.ViewModels.Books.AddBookVM

@{
    ViewData["Title"] = "Add New Book";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="fas fa-book-medical me-2"></i>Add New Book
                    </h2>
                    <p class="text-muted mb-0">Add a new book to your library collection</p>
                </div>
                <a asp-action="All" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Library
                </a>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Book Information
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddNewBook" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ISBN" class="form-label fw-semibold">
                                    <i class="fas fa-barcode me-2"></i>ISBN
                                </label>
                                <input asp-for="ISBN" class="form-control form-control-lg" placeholder="Enter ISBN number" />
                                <span asp-validation-for="ISBN" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalCopies" class="form-label fw-semibold">
                                    <i class="fas fa-copy me-2"></i>Total Copies
                                </label>
                                <input asp-for="TotalCopies" class="form-control form-control-lg" placeholder="Number of copies" type="number" min="1" />
                                <span asp-validation-for="TotalCopies" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-semibold">
                                    <i class="fas fa-heading me-2"></i>Book Title
                                </label>
                                <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter book title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Author" class="form-label fw-semibold">
                                    <i class="fas fa-user-edit me-2"></i>Author Name
                                </label>
                                <input asp-for="Author" class="form-control form-control-lg" placeholder="Enter author name" />
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CoverPic" class="form-label fw-semibold">
                                <i class="fas fa-image me-2"></i>Book Cover Image
                            </label>
                            <input asp-for="CoverPic" type="file" class="form-control form-control-lg" accept="image/*" />
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Choose a high-quality image for the book cover (JPG, PNG, or GIF)
                            </div>
                            <span asp-validation-for="CoverPic" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-action="All" class="btn btn-outline-secondary btn-lg me-md-2">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-save me-2"></i>Add Book to Library
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
