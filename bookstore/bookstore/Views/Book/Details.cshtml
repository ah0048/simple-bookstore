@model bookstore.ViewModels.Books.BookDetailsVM

@{
    ViewData["Title"] = "Book Details";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="fas fa-book-open me-2"></i>Book Details
                    </h2>
                    <p class="text-muted mb-0">Comprehensive book information</p>
                </div>
                <a asp-action="All" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Library
                </a>
            </div>
        </div>
    </div>

    <!-- Book Information -->
    <div class="row">
        <!-- Book Cover and Basic Info -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="position-relative">
                    <img src="@Model.CoverUrl" class="card-img-top" style="height: 500px; object-fit: cover;" alt="@Model.Title cover" />
                    <div class="position-absolute top-0 end-0 m-3">
                        <span class="badge bg-primary fs-6">ID: @Model.Id</span>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h3 class="card-title text-primary fw-bold mb-2">@Model.Title</h3>
                    <p class="text-muted fs-5 mb-3">
                        <i class="fas fa-user-edit me-2"></i>by @Model.Author
                    </p>
                    
                    <!-- Availability Status -->
                    <div class="row text-center mb-3">
                        <div class="col-6">
                            <div class="p-3 bg-light rounded">
                                <h4 class="text-primary mb-1">@Model.TotalCopies</h4>
                                <small class="text-muted">Total Copies</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 @(Model.AvailableCopies > 0 ? "bg-success" : "bg-danger") text-white rounded">
                                <h4 class="mb-1">@Model.AvailableCopies</h4>
                                <small>Available</small>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Status Badge -->
                    @if (Model.AvailableCopies > 0)
                    {
                        <span class="badge bg-success fs-6 mb-3">
                            <i class="fas fa-check-circle me-1"></i>Available for Borrowing
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6 mb-3">
                            <i class="fas fa-times-circle me-1"></i>Currently Unavailable
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Borrowers Information -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-users me-2"></i>Current Borrowers
                        </h4>
                        <span class="badge bg-light text-dark fs-6">
                            @(Model.BookBorrowers?.Count ?? 0) Active Borrowers
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.BookBorrowers != null && Model.BookBorrowers.Any())
                    {
                        <div class="row">
                            @foreach (var borrower in Model.BookBorrowers)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border-start border-primary border-4 bg-light">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h5 class="card-title text-primary mb-1">
                                                        <i class="fas fa-user me-2"></i>@borrower.BorrowerName
                                                    </h5>
                                                    <p class="text-muted mb-2">ID: @borrower.BorrowerId</p>
                                                    <div class="d-flex align-items-center">
                                                        <span class="badge bg-primary me-2">
                                                            @borrower.BorrowedCopies copies
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="text-end">
                                                    <a asp-controller="Borrower" asp-action="BorrowerDetails" asp-route-id="@borrower.BorrowerId" 
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye me-1"></i>View Profile
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-slash text-muted mb-3" style="font-size: 4rem;"></i>
                            <h4 class="text-muted">No Current Borrowers</h4>
                            <p class="text-muted">This book is available for borrowing</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <a asp-controller="Borrower" asp-action="BorrowBookView" class="btn btn-success w-100">
                                <i class="fas fa-plus me-2"></i>Lend Book
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a asp-controller="Borrower" asp-action="ReturnBookView" class="btn btn-warning w-100">
                                <i class="fas fa-undo me-2"></i>Return Book
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
